@model IEnumerable<Apartment_Web.Models.DTO.ApartmentNumberDTO>
<br />
<div class="container p-4 border">
   <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Apartment Number List</h1>   
        </div>
        <div class="col text-end pt-1">
            <a asp asp-controller="ApartmentNumber" asp-action="CreateApartmentNumber" class="btn btn-outline-primary"> <i class="bi bi-plus-square-fill"></i> Create New Apartment Number</a>
        </div>
   <table class="table">
       <thead>
           <tr>
               <th>
                   Apartment Name
               </th>
               <th>
                   Apartment Number
               </th>
               <th></th>
           </tr>
       </thead>
       <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Apartment</td>
                        <td>@item.ApartmentNo</td>
                        <td>
                            <a asp-controller="Apartment" asp-action="UpdateApartmentNumber" asp-route-apartmentNo="@item.ApartmentNo" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Apartment" asp-action="DeleteApartmentNumber" asp-route-apartmentNo="@item.ApartmentNo" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
       </tbody>
   </table>
   </div>
   

   
</div>

