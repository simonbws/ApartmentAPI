@model IEnumerable<Apartment_Web.Models.DTO.ApartmentDTO>

<div class="container p-4 border rounded">
    <div class="row pb-3 align-items-center">
        <div class="col">
            <h1 class="text-primary">Apartment List</h1>
        </div>
        <div class="col text-end">
            <a asp-controller="Apartment" asp-action="CreateApartment" class="btn btn-outline-primary">
                <i class="bi bi-plus-square-fill me-1"></i> Create New Apartment
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@item.Rate.ToString("c")</td>
                    <td class="text-center">
                        <a asp-controller="Apartment" asp-action="UpdateApartment" asp-route-apartmentId="@item.Id"  class="btn btn-success btn-sm me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-controller="Apartment" asp-action="DeleteApartment" asp-route-apartmentId="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>